<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Some Website</title>
  </head>
  <style>
    div {
      background-color: lightgrey;
      width: 450px;
      border: 15px solid green;
      padding: 50px;
      margin: 20px;
      text-align: center;
    }
  </style>

  <script>
    function results(){
      var name = document.getElementById('name').value;
      show_name.innerHTML = "Your name is: " + name;

      document.getElementById("filechoice").addEventListener('change', function(){
        var fr = new FileReader();
        fr.onload = function(){
          document.getElementById("output").textContent = this.result;
        }
        fr.readAsText(this.files[0]);
      });
    }
  </script>

  <div>
    <body>
      <center> {{> header}}
      <p>Welcome to Home page</p></center>
      <br>
      <form onsubmit="results(); return false;">
        <p>Enter your Name: <input id="name" type='text' name='name'/></p>
        <p>Upload text file: <input id='filechoice' type='file' value='upload'/></p>
        <p><input id="submit" type="submit" value="Submit data"/></p>
      </form>

      <br>
        <span id = "show_name"></span>
        <br>
        <span id = "output"></span>
      <br>

      <center> {{> footer}} </center>
    </body>


  </div>
</html>
